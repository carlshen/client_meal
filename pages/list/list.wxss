/* 折扣信息区 */
/* 左侧菜单 */
.left-menu{
  width:160rpx;
  font-size:36rpx;
  position: absolute;
  left:0px;
  z-index: 10;
}
/* 子菜单公共样式 */
.left-menu-common{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
/* 子菜单未选中样式 */
.left-menu-unselect{
  color: #6C6C6C;
  border-bottom:1px solid #E3E3E3;
  background:#F9F9F9;
}
/* 子菜单选中样式 */
.left-menu-selected{
  color: #FF9C35;
  border-left:3px solid #FF9C35;
  background:white;
}
/* 右侧菜单 */
.list-tab{
  margin-left:170rpx;
  font-size:24rpx;
  background:#F3F4F6;
  padding:2px;
  color:#FF9C35;
}
.content-list{
  margin-left:160rpx;
  display:flex;
  border-bottom: 1px solid #E3E3E3;
}
.list-image-box{
  width:160rpx;
  height:72px;
  text-align: center;
}
.list-image{
  width:108rpx;
  margin-top:16rpx;
}
.list-name-box{
  width:250px;
  display:flex;
  font-size:32rpx;
  margin-top:20rpx;
}
.list-price{
  margin-top:20rpx;
  color:#F05A86
}
.add-icon{
  float:right;
  color:#FF9C35;
  font-size:30px
}
/* 底部菜单操作 */
.bottom-operate-menu{
  z-index: 1001; 
  position: fixed;
  bottom: 0px;
  height:56px;
  width:100%;
  display: flex;
}
.shopping-cart{
  width:75%;
  background:#353535;
  height: 100%; 
}
.shopping-cart-icon{
  font-size:40px;
  color:#87888E;
  margin-left:10px;
   position: relative;
}
.activity-color{
  color:#FF9C35;
}
.submit-btn{
  height:100%;
  background:#F7F7F7;
  width:25%;
  display:flex;
}
.activity-color-bg{
  background:#FF9C35;
}
.number-msg{
  padding: 1px 7px;
  border-radius:50%;
  background:red;
  color:white;
  font-size:14px;
  position: absolute;
  text-align: center;
  top:0px;
  right:-5px;
}
.shopping-cart-price{
  color:#A9A9A9;
  display:flex;
  align-items: center;
  margin-left:10px;
  font-size:15px
}
.submit-btn-label{
  color:#A9A9A9;
  font-size:15px;
  margin:auto;
}
.color-white{
  color:white;
}
/* 弹窗 */
.drawer-screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  
/* 购物车内容 */
.cartlist-content{  
  width: 100%; 
  overflow: hidden;  
  position: fixed;   
  z-index: 1001;
  bottom: 55px;
  max-height: 250px;  
}
.cartlist-title{
  background:#F0F0F0;
  height:30px
}
.label-title-bar{
  color:#878787;
  font-size:12px;
  border-left:4px solid #FF9C35;
  margin-left: 20px;
}
.lable-selected{
  padding:5px
}
.lable-icon-clear{
    color:#878787;
    float: right;
    margin-right: 10px;
}
.label-clear{
  color:#878787;
  font-size:12px;

}
.cart-list-box{
  background:#FFFFFF;
  display:flex;
  font-size:16px;
  border-bottom:1px #E3E3E3 solid
}
.listL-info{
  width:80%;
  padding:5px 5px;
}
.listR-info{
  width:80%;
  padding:5px 5px;
}
.listR-info-con{
  float:right
}
.font20{
  font-size:20px
}
.list-info-size{
  font-size:10px;
  color:#B1B1B1;
}
.icon-li-circle{
  margin-left:15px;
  font-size:30px
}

.cart-scroll-list{
  height:450rpx;
}
